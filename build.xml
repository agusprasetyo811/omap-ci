<?xml version="1.0"?>

<project name="omap-ci" default="build" basedir=".">

	<property file="development.properties"/>
	<property name="app.config.dir" value="application/config" />
	<property name="app.controllers.dir" value="application/controllers" />
	<property name="app.libraries.dir" value="application/libraries" />
	<property name="app.views.dir" value="application/views" />
	<property name="app.views.theme.dir" value="application/views/omap-ci/" />
	<property name="app.views.theme.pages.dir" value="application/views/omap-ci/pages/" />
	<property name="app.views.theme.style.dir" value="application/views/omap-ci/style/" />
	<property name="sys.core.dir" value="system/core" />

	<target name="remote.compile">
		<copy file="${app.config.dir}/config.php" todir="${ci.local.dir}${app.config.dir}" overwrite="true"></copy>
		<copy file="${app.controllers.dir}/dasbor.php" todir="${ci.local.dir}${app.controllers.dir}" overwrite="true"></copy>
		<copy file="${app.libraries.dir}/template.php" todir="${ci.local.dir}${app.libraries.dir}" overwrite="true"></copy>
		<copy file="${app.views.theme.dir}/index.php" todir="${ci.local.dir}${app.views.theme.dir}" overwrite="true"></copy>
		<copy file="${app.views.theme.style.dir}/style.css" todir="${ci.local.dir}${app.views.theme.style.dir}" overwrite="true"></copy>
		<copy file="${app.views.theme.pages.dir}/home.php" todir="${ci.local.dir}${app.views.theme.pages.dir}" overwrite="true"></copy>
		<copy file="${sys.core.dir}/Config.php" todir="${ci.local.dir}${sys.core.dir}" overwrite="true"></copy>
	</target>

	<target name="build">
		<javac srcdir="." />
	</target>
</project>